<h1>posts/indexです</h1>
<p id="alert"><%= flash[:alert]%></p>
<%= link_to("新規投稿", "/posts/new") %>
<% @posts.each do |post| %>
  </br>
  <span><%= post.body %></span>
  <span><%= post.user_id %></span>
  <% if post.favorited?(current_user) %>
    <%= button_to post_favorites_path(post.id), method: :delete do %>
      <span style="color:red;">❤︎</span>
    <% end %>
  <% else %>
    <%= button_to post_favorites_path(post.id), method: :post do %>
      <span>❤︎</span>
    <% end %>
  <% end %>
  <% if post.user_id == @current_user.id %>
    <td><%= link_to("編集", "/posts/#{post.id}/edit") %></td>
    <td><%= button_to("削除", "/posts/#{post.id}", method: :delete) %></td> 
  <% end %>
<% end %>
