<h1>投稿一覧</h1>
<%= link_to 'ユーザー一覧', admin_users_path %>
<p id="alert" class="sherif"><%= flash[:notice]%></p>
<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>投稿者</th>
      <th>本文</th>
      <th>ボタン</th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
      <td><%= post.id %></td>
      <td>
        <%= link_to post.user.name, edit_admin_user_path(post.user.id) %>
      <td>
        <%= link_to post.body, edit_admin_post_path(post.id) %>
      </td>
      <td>
      <%= button_to 'さくじょ', admin_post_path(post.id), method: :delete %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
